
@using Microsoft.AspNetCore.Identity 
@using BookWorm.Service 
@inject BuyService _buyService 
@inject UserManager<User> _userManager ;  
@{
    Layout = "/Views/Shared/_AdminLayout.cshtml" ;
}

@{
  User currentUser = await _userManager.GetUserAsync(User);
  Decimal Income , SpendMoney ; 
  Income = _buyService.GetIncomeByUserID(currentUser.Id);
  SpendMoney = _buyService.GetMoneySpendByUserID(currentUser.Id);
  double TodayUser = _buyService.CountTodayUser(currentUser.Id);
  double SpendPercent = Decimal.ToInt32(SpendMoney) * 100 / (Decimal.ToInt32(currentUser.Money) + Decimal.ToInt32(SpendMoney)) ;
    double SalePercent = Decimal.ToInt32(Income) * 100 / (Decimal.ToInt32(currentUser.Money) - Decimal.ToInt32(Income)) ;
}
  <div class="row mb-3">
            <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
          <div class="card">
            <div class="card-body p-3">
              <div class="row">
                <div class="col-8">
                  <div class="numbers">
                    <p class="text-sm mb-0 text-capitalize font-weight-bold">Today's Money</p>
                    <h5 class="font-weight-bolder mb-0">
                      $@currentUser.Money
                      <span class="text-success text-sm font-weight-bolder"></span>
                    </h5>
                  </div>
                </div>
                <div class="col-4 text-end">
                  <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                    <i class="ni ni-money-coins text-lg opacity-10" aria-hidden="true"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
          <div class="card">
            <div class="card-body p-3">
              <div class="row">
                <div class="col-8">
                  <div class="numbers">
                    <p class="text-sm mb-0 text-capitalize font-weight-bold">Today's Users</p>
                    <h5 class="font-weight-bolder mb-0">
                      @TodayUser
                      <span class="text-success text-sm font-weight-bolder"></span>
                    </h5>
                  </div>
                </div>
                <div class="col-4 text-end">
                  <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                    <i class="ni ni-world text-lg opacity-10" aria-hidden="true"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
          <div class="card">
            <div class="card-body p-3">
              <div class="row">
                <div class="col-8">
                  <div class="numbers">
                    <p class="text-sm mb-0 text-capitalize font-weight-bold">Money Spend</p>
                    <h5 class="font-weight-bolder mb-0">
                      $@SpendMoney
                      <span class="text-danger text-sm font-weight-bolder">-@string.Format("{0:0.00}",SpendPercent)%</span>
                    </h5>
                  </div>
                </div>
                <div class="col-4 text-end">
                  <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                    <i class="ni ni-paper-diploma text-lg opacity-10" aria-hidden="true"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-xl-3 col-sm-6">
          <div class="card">
            <div class="card-body p-3">
              <div class="row">
                <div class="col-8">
                  <div class="numbers">
                    <p class="text-sm mb-0 text-capitalize font-weight-bold">Sales</p>
                    <h5 class="font-weight-bolder mb-0">
                      $@Income
                      <span class="text-success text-sm font-weight-bolder">+@SalePercent%</span>
                    </h5>
                  </div>
                </div>
                <div class="col-4 text-end">
                  <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                    <i class="ni ni-cart text-lg opacity-10" aria-hidden="true"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      @RenderBody()