@inject BookWorm.Service.CategoryService CategoryService 
@{
    Layout = "/Views/Shared/_NavLayout.cshtml"; 
    ViewBag.PageName = "Shop"; 
}
    

    <div class="container-fluid py-4">  @* thẻ chính  *@

     <form>
            <div class="input-group" style="width: 500px;">
              <span class="input-group-text text-body"><i class="fas fa-search" aria-hidden="true"></i></span>
              <input name="textFind" type="text" class="form-control" placeholder="Type here...">
            </div>
     </form>
     
      <div class="row mt-4">     
        
        <div class="col-lg-3">
          <div class="card h-100 p-3">
            <div class="overflow-hidden position-relative border-radius-lg bg-cover h-100" style="background-image: url('/assets/img/ivancik.jpg');">
              <span class="mask bg-gradient-dark"></span>
              <div class="card-body position-relative z-index-1 d-flex flex-column h-100 p-3">
                <h5 class="text-primary font-weight-bolder mb-4 pt-2">Filter by category </h5>
                @{
                  var Categories = CategoryService.GetAllCategories() ;
                  <a asp-action="index"  class="text-white font-weight-bolder mb-4 pt-2" asp-route-id="">Show all</a>
                  foreach(var item in Categories){
                    <a asp-route-id="@item.ID" class="text-white font-weight-bolder mb-4 pt-2">@item.Name</a>
                  }
                }
                  <i class="fas fa-arrow-right text-sm ms-1" aria-hidden="true"></i>
                </a>
              </div>
            </div>
          </div>
        </div>
        
        <div class="col-lg-9 mb-lg-0 mb-4">
          
        @RenderBody()

        </div>

   
      </div>  

      
