@model Product
@{
    Layout = "/Views/Shared/_AdminLayout.cshtml" ;
}
<html lang="en">
<head>
	<title>Login V1</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
<!--===============================================================================================-->	
	<link rel="icon" type="image/png" href="/images/icons/favicon.ico"/>
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/bootstrap/css/bootstrap.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/animate/animate.css">
<!--===============================================================================================-->	
	<link rel="stylesheet" type="text/css" href="/vendor/css-hamburgers/hamburgers.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/select2/select2.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/css/util.css">
	<link rel="stylesheet" type="text/css" href="/css/main.css">
<!--===============================================================================================-->
</head>
<body>
	
	<div class="limiter">
		<div class="container-login100" style="background-image: url('/assets/img/vr-bg.jpg') ; background-size: cover;" >
            <div class="card rounded bg-muted" style="width: 60rem;">
            <img src="/images/@Model.Image"  style="width: 30rem; height: 28rem ; margin-top: 20px" class="card-img-top container rounded-circle" alt="...">
            <div class="card-body">
                <h5>Title: @Model.Title</h5>
                <h2>Book Name: @Model.Name</h2>
            </div>
            <style>
                li {
                    font-size: large ;
                    
                }
                .text-list{
                    color : #808080
                }
            </style>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-list">@Model.Content</li>
            </ul>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-list">Price: @Model.Price$</li>
                <li class="list-group-item text-list">Discount: @Model.Discount%</li>     
                <li class="list-group-item text-list">From: @Model.UserID</li>              
            </ul>

            <div class="card-body container" style="text-align: center;">
                <a class="card-link btn btn-primary" asp-controller="home" asp-action="index">Back</a>
                <a href="#" class="card-link btn btn-success" >Buy</a>
            </div>

            </div>  
		</div>
	</div>
	
    
<!--===============================================================================================-->	
	<script src="/vendor/jquery/jquery-3.2.1.min.js"></script>
<!--===============================================================================================-->
	<script src="/vendor/bootstrap/js/popper.js"></script>
	<script src="/vendor/bootstrap/js/bootstrap.min.js"></script>
<!--===============================================================================================-->
	<script src="/vendor/select2/select2.min.js"></script>
<!--===============================================================================================-->
	<script src="/vendor/tilt/tilt.jquery.min.js"></script>
	<script >
		$('.js-tilt').tilt({
			scale: 1.1
		})
	</script>
<!--===============================================================================================-->
	<script src="/js/main.js"></script>
</body>
</html>
